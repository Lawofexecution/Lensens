  <div class="row">
    <div class="col-sm-12 ">
      <%= render "components/carousel" %>
    </div>
  </div>
</div>
<div class="container-fluid">

  <div class="row info-row">
    <div class="col-sm-8 ">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <span class="badge badge-success p-2 m-2">Portrait</span>
            <span class="badge badge-success p-2 m-2">Landscape</span>
            <span class="badge badge-success p-2 m-2">Sport</span>
            <span class="badge badge-success p-2 m-2">Fashion</span>
            <span class="badge badge-success p-2 m-2">Street</span>
          </div>
          <div class="col-sm-12 ">
            <%= render "components/avatar" %>
            <%= @creator.short_name %>
          </div>
          <div class="col-sm-12">
            <p class="bio">
              <%= @creator.bio %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-4 ">
    <span style="display:none" class="widget-content" data-unavailable="<%= @creator.unavailable_dates.to_json %>" ></span>
      <%= simple_form_for([@creator,@booking]) do |f| %>
        <%= f.input :start_date, as: :string, placeholder: "De :", wrapper_html: { class: "inline_field_wrapper" } %>
        <%= f.input :end_date, as: :string, placeholder: "Ã€ :", disabled: true, wrapper_html: { class: "inline_field_wrapper" } %>
        <%= f.submit "book", class: "btn btn-primary btn-lg btn-block btn-booking" %>
      <% end %>
    </div>
  </div>
</div>
