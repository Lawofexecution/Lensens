<div class= "container ">
  <h1>Choisissez le meilleur créateur pour vous</h1>
  <div class ="home-container mt-12">

    <div>
      <%= simple_form_for :index, method: :get, html: { class: "search-form" } do |f| %>
        <h2>Filtrer par:</h2>
        <div class="search-bar">
          <%= f.input :ville, placeholder: "Ville ?" %>
          <i class="fas fa-search"></i>
        </div>
        <div class="d-flex">
          <%=f.input :role, as: :radio_buttons, collection: ["Photographe", "Cinéaste"], wrapper_html: { class: "inline-inputs" }, label_html: { class: "inline-labels"} %>
        </div>
        <div class="d-flex">
          <%=f.input :price_per_day, as: :radio_buttons, collection: ["< 1000", "1000 - 5000"], wrapper_html: { class: "inline-inputs" }, label_html: { class: "inline-labels"} %>
        </div>
        <%= f.button :submit, "Recherchez", class: "custom-btn" %>
      <% end %>
    </div>

    <div>
      <div id="map"
        style="width: 465px; height: 400px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
  <div class="container">
    <div class="row">
      <% @creators.each do |creator| %>
       <%= render "components/creator_card",creator: creator %>
      <% end  %>
    </div>
  </div>
</div>
